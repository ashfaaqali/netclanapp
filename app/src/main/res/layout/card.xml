<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9ECED">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04">

        <!-- Content inside the card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/invite_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="+ Invite"
                android:padding="5dp"
                android:textColor="#004C72"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="50dp">


                <!-- Contact Name -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/contactName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iqra Bano"
                    android:textColor="#004C72"
                    android:textSize="18sp"
                    android:padding="2dp"
                    android:textStyle="bold" />

                <!-- Contact Address -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/contactAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="9 Wazirbagh Mohallah, Lucknow"
                    android:textSize="14sp" />

                <!-- Distance from User -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/contactDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Within 1.2 KM"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:textColor="#004C72"
                    android:textSize="14sp" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressBar"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:progress="35"
                    android:layout_marginTop="5dp"
                    app:trackThickness="15dp"
                    app:trackCornerRadius="20dp"
                        app:indicatorColor="#97A3A9"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <!-- Contact Interests -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/contactInterests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coffee | Business | Friendship"
                    android:textStyle="bold"
                    android:textColor="#004C72"
                    android:textSize="14sp" />

                <!-- Status -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hi community! I am open to new connections"
                    android:textSize="14sp" />

                <!-- Expression -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/emoji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/expression"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:elevation="5dp"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardView"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

</androidx.constraintlayout.widget.ConstraintLayout>